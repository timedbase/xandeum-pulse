{
  "name": "xandeum-pulse-backend",
  "version": "1.0.0",
  "description": "Backend sync service for Xandeum Pulse - syncs pRPC data to Supabase",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "xandeum",
    "pnode",
    "sync",
    "blockchain"
  ],
  "author": "0xstarhq",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.87.1",
    "express": "^4.21.2",
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.7",
    "winston": "^3.17.0",
    "axios": "^1.7.9",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.16.5",
    "@types/node-cron": "^3.0.11",
    "@types/cors": "^2.8.17",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "eslint": "^9.32.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
